// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  pets      Pet[]
}

model Pet {
  id           Int      @id @default(autoincrement())
  name         String
  breed        String
  age          String
  size         String
  color        String
  hairLength   String
  behaviour    String
  categoryId   Int
  category     Category @relation(fields: [categoryId], references: [id])
  createdAt    DateTime @default(now())
  description  String
  phone        String
  location     String
  vaccinated   Boolean
  houseTrained Boolean
  userId       Int
  User         User     @relation(fields: [userId], references: [id])
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  petId Pet[]
}
