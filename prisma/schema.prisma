// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Pet {
  id    Int    @id @default(autoincrement())
  name  String
  breed String
  age   String
  size  String
  goodWith String
  color String
  hairLength String
  behaviour String
  category String
  user String
  firstName String
  lastName String
  createdAt DateTime @default(now())

}

